{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "extends": ["ultracite"],
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "indentWidth": 4,
    "lineWidth": 160
  },
  "linter": {
    "rules": {
      "nursery": {
        "useSortedClasses": "error"
      },
      "style": {
        "noMagicNumbers": "off"
      }

    }
  }
}
