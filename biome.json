{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"files": {
		"includes": ["app/**", "components/**", "configs/**", "hooks/**", "lib/**", "pages/**", "repositories/**", "services/**", "utils/**"],
		"experimentalScannerIgnores": [
			"node_modules/**",
			".git/**",
			"dist/**",
			"build/**",
			".next/**",
			".turbo/**",
			"coverage/**",
			".cache/**",
			"public/**",
			"assets/**",
			"drizzle/**",
			"**/*.svg",
			"**/*.ico"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 160
	},
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"useImportType": "error"
			},
			"correctness": {
				"useUniqueElementIds": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on",
				"useSortedKeys": "off",
				"useSortedAttributes": "off"
			}
		}
	}
}
